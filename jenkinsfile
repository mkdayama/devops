pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: 'main']],
                          userRemoteConfigs: [[url: 'https://github.com/mkdayama/devops.git']]])
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Builds the docker image and tags it
                    sh "docker build -t mkdayama-devops-app:latest ."
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stops and removes any existing container with the same name
                    sh "docker stop mkdayama-devops-container || true"
                    sh "docker rm mkdayama-devops-container || true"

                    // Runs a new container, mapping port 8081 on the host to port 80 in the container
                    sh "docker run -d --name mkdayama-devops-container -p 8081:80 mkdayama-devops-app:latest"
                }
            }
        }
    }
}
